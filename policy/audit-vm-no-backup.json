{
  "mode": "Indexed",
  "policyRule": {
    "if": {
      "allOf": [
        {
          "field": "type",
          "equals": "Microsoft.Compute/virtualMachines"
        },
        {
          "field": "Microsoft.RecoveryServices/backupprotecteditem",
          "exists": "false"
        }
      ]
    },
    "then": {
      "effect": "Audit"
    }
  }
}
